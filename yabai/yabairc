launchctl unload -F /System/Library/LaunchAgents/com.apple.WindowManager.plist >/dev/null 2>&1 &

yabai -m config layout bsp

yabai -m config top_padding    40
yabai -m config bottom_padding 11
yabai -m config left_padding   11
yabai -m config right_padding  11
yabai -m config window_gap     11

yabai -m config mouse_modifier cmd
yabai -m config mouse_action1 move
yabai -m config mouse_action2 resize

yabai -m config menubar_opacity 0.0

yabai -m rule --add app="^(Calculator|Software Update|Finder|System Preferences|System Settings|Python|App Store|Activity Monitor|Riot Client|League of Legends)$" manage=off
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add label="About This Mac" app="System Information" title="About This Mac" manage=off

yabai -m config layout bsp
yabai -m rule --apply
